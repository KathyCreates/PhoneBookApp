<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.phonebook.controllers.PhoneBookController"
          hgap="10" vgap="10" alignment="CENTER">
    <TextField fx:id="nameField" promptText="Name" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="phoneField" promptText="Phone Number" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <Button text="Add Contact" onAction="#addContact" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
    <Button text="Edit Contact" onAction="#editContact" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
    <ListView fx:id="contactListView" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
</GridPane>